{
  "name": "faculty-availability-indicator",
  "version": "1.0.0",
  "description": "QR-enabled real-time faculty availability indicator with binary status encoding",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:client": "cd client && npm install",
    "dev:full": "concurrently \"npm run dev\" \"cd client && npm start\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "faculty",
    "availability",
    "qr-code",
    "real-time",
    "education"
  ],
  "author": "Faculty Availability System",
  "license": "MIT"
}